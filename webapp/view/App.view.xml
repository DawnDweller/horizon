<mvc:View
   controllerName="ui5.horizon.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true"
   >
   <Shell>
        <App>
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <content>
                        <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
                            <content>
                                <Text text="Hello World"/>
                                <Button 
                                text="{i18n>onPressButtonText}"
                                press=".onPress"
                                class="sapUiSmallMarginEnd"
                                    />
                                    <Input
                                        value="{/receipent/name}"
                                        description="Hello {/receipent/name}"
                                        valueLiveUpdate="true"
                                        width="60%"
                                            />
                                    <Text text=":) {/receipent/name}"
                                    class="sapUiSmallMargin"
                                    />
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
   </Shell>

</mvc:View>